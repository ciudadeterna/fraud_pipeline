import pandas as pd
import numpy as np

df = pd.read_csv('creditcard_sample.csv')

drift_factor = np.random.normal(1.01, 0.01)
df['Amount'] *= drift_factor
df['V1'] += np.random.normal(0.05, 0.01, len(df))
df['V2'] += np.random.normal(0.05, 0.01, len(df))
df['V3'] += np.random.normal(0.05, 0.01, len(df))

df.to_csv('creditcard_sample.csv', index=False)

